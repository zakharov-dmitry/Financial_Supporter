<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">
        <div metal:use-macro="load: ../components/navbar.pt"/>
            <div class="container mt-4 w-25 h-25">
                <h1 class="display-4 text-danger">INVESTMENT</h1>
                <form action="" method="POST" class="account-form">
                  <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input name="title" type="text" placeholder="" class="form-control" value="${title}">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">ID</label>
                    <input name="id" type="text" placeholder="" class="form-control" value="${id}">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Amount</label>
                    <input name="amount" type="text" placeholder="" class="form-control" value="${amount}">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Coupon</label>
                    <input name="coupon" type="text" placeholder="" class="form-control" value="${coupon}">
                  </div>
                  <div style="clear: both;"></div>
                  <div class="text-danger font-weight-bolt" tal:condition="error">${ error }</div>
                  <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        <div metal:use-macro="load: ../components/footer.pt"/>
    </div>
</div>