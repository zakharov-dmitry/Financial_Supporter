<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">
        <div metal:use-macro="load: ../components/navbar.pt"/>
        <div class="container">
            <h1 class="display-4 text-danger">FINANCIAL SUPPORTER</h1>
            <p class="font-monospace">Positions owned by ${user}</p>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Ð¢itle</th>
                  <th scope="col">ID</th>
                  <th scope="col">Amount</th>
                  <th scope="col">Coupon</th>
                </tr>
              </thead>
              <tbody>
                <div tal:repeat="investment investments">
                    <tr>
                      <th scope="row">${repeat.investment.number}</th>
                      <td>${investment.title}</td>
                      <td>${investment.id}</td>
                      <td>${investment.amount}</td>
                      <td>${investment.coupon}</td>
                    </tr>
                </div>
              </tbody>
            </table>
        </div>
        <div metal:use-macro="load: ../components/footer.pt"/>
    </div>
</div>